<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

    <!-- Material Definitions -->
    <material name="grey">
        <color rgba="0.2 0.2 0.2 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>
    
    <material name="blue">
        <color rgba="0 0 1 1"/>


    </material>

   
    <link name="world" />


    <!-- base Joint -->
    <link name="base">
        <visual>
            <origin xyz="0 0 0" rpy="1.570796326795 0 0" />
            <geometry>
                <mesh filename="package://robu/urdf/Z_Achse.stl" scale="0.01 0.01 0.01" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0 0 2.1" rpy="1.570796326795 0 0" />
            <geometry>
                <box size="2.5 4.2 2.5" />
            </geometry>
        </collision>
        <inertial>

            <origin xyz="0 0 0.05" rpy="0 0 0"/>

            <mass value="12" />

            <inertia ixx="2.26" ixy="0.0" ixz="0.0" iyy="6.26" iyz="0.0" izz="8.5" />

        </inertial>
    </link>

    <joint name="base_to_world" type="fixed">
        <parent link="world" />
        <child link="base" />
        <origin xyz="0 0 0" rpy="0 0 0"  />
    </joint>


    <!-- Z.Achse Segment Joint-->
    <link name="z_achse">
        <visual>
            <origin xyz="0 0 0 " rpy="4.712388980385 3.14159265359 4.712388980385" />
            <geometry>
                <mesh filename="package://robu/urdf/1_Arm.stl" scale="0.01 0.01 0.01" />
            </geometry>
            <material name="orange" />
        </visual>
        <!-- -> Keine Collissions weil das Bauteil in der Z-Achse ist. -->
        <inertial>

            <origin xyz="0 0 0.05" rpy="0 0 0"/>

            <mass value="12" />

            <inertia ixx="2.26" ixy="0.0" ixz="0.0" iyy="6.26" iyz="0.0" izz="8.5" />

        </inertial>
    </link>

    <joint name="z_Achse_to_base" type="prismatic">
        <parent link="base" />
        <child link="z_achse" />
        <origin xyz="0 0 0" rpy="0 0 0"  />
        <axis xyz="0 0 1"/>
        <limit lower="0.5" upper="3.03" effort="100" velocity="0.1"/>
    </joint>



    <!-- 1 Arm Segment Joint-->
    <link name="1_arm">
        <visual>
            <origin xyz="0 0 0 " rpy="4.712388980385 3.14159265359 4.712388980385" />
            <geometry>
                <mesh filename="package://robu/urdf/2_Arm.stl" scale="0.01 0.01 0.01" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <origin xyz="0 1 0.65" rpy="1.570796326795 0 0" />
            <geometry>
                <box size="1 1.35 3.25" />
            </geometry>
        </collision>
        <inertial>

            <origin xyz="0 0 0.05" rpy="0 0 0"/>

            <mass value="12" />

            <inertia ixx="2.26" ixy="0.0" ixz="0.0" iyy="6.26" iyz="0.0" izz="8.5" />

        </inertial>
    </link>

    <joint name="z_achse_to_1_arm" type="revolute">
        <parent link="z_achse" />
        <child link="1_arm" />
        <origin xyz="0 1 -.35" rpy="0 0 0"  />
        <axis xyz="0 0 1"/>
        <limit lower="-1.5" upper="1.5" effort="100" velocity="0.1"/>
    </joint>

    <!-- 2 Arm Segment Joint-->
    <link name="2_arm">
        <visual>
            <origin xyz="0 0 0 " rpy="4.712388980385 0 4.712388980385" />
            <geometry>
                <mesh filename="package://robu/urdf/3_Arm.stl" scale="0.01 0.01 0.01" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <origin xyz="0 1.4 .2" rpy="1.570796326795 0 0" />
            <geometry>
                <box size="1 .7 2.5" />
            </geometry>
        </collision>
        <inertial>

            <origin xyz="0 0 0.05" rpy="0 0 0"/>

            <mass value="12" />

            <inertia ixx="2.26" ixy="0.0" ixz="0.0" iyy="6.26" iyz="0.0" izz="8.5" />

        </inertial>
    </link>

    <joint name="1_achse_to_2_arm" type="revolute">
        <parent link="1_arm" />
        <child link="2_arm" />
        <origin xyz="0 2.3 1.15" rpy="0 0 0"  />
        <axis xyz="0 0 1"/>
        <limit lower="-2" upper="2" effort="100" velocity="0.1"/>
    </joint>

    <!-- greifer Segment Joint-->
    <link name="greifer">
        <visual>
            <origin xyz="0 0 0 " rpy="1.570796326795 0 4.712388980385" />
            <geometry>
                <mesh filename="package://robu/urdf/Greiferneu.stl" scale="0.01 0.01 0.01" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <origin xyz="0 0 -0.47" rpy="1.570796326795 0 0" />
            <geometry>
                <box size=".75 1 1" />
            </geometry>
        </collision>
        <inertial>

            <origin xyz="0 0 0.05" rpy="0 0 0"/>

            <mass value="12" />

            <inertia ixx="2.26" ixy="0.0" ixz="0.0" iyy="6.26" iyz="0.0" izz="8.5" />

        </inertial>
    </link>

    <joint name="2_achse_to_greifer" type="continuous">
        <parent link="2_arm" />
        <child link="greifer" />
        <origin xyz="0 2.2 -0.19" rpy="0 0 0"  />
        <axis xyz="0 0 1"/>
    </joint>




    <xacro:include filename="example_gazebo.xacro" />
</robot>